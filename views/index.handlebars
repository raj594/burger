<h1>Burgers</h1>
<hr>
<div class="undevoured">
<p></p>
  {{#each burger}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}

</div>

<div class="devoured">

  {{#each burger}}
    {{#if devoured}}
      <p>{{id}}: {{burger_name}}</p>
    {{/if}}
  {{/each}}

</div>

<div class="addBurger">
	<hr>
	<h2>Add a Burger</h2>
	<form class="create-form">

	  <div class="form-group">
	    <label for="ca">Burger Name:</label>
	    <input type="text" id="burger" name="name">
	  </div>

	  <button type="submit">Add Burger</button>
	</form>
</div>
